{
	"version": "1",
	"id": "cyberpunk",
	"name": "Cyberpunk",
	"tags": ["neon", "dark", "futuristic", "high-contrast"],
	"aliases": ["synthwave", "cyber"],
	"tailwind": {
		"colors": {
			"base-100": "oklch(12% 0.03 300)",
			"base-200": "oklch(16% 0.03 300)",
			"base-300": "oklch(22% 0.03 300)",
			"base-content": "oklch(95% 0.02 300)",
			"primary": "oklch(65% 0.28 330)",
			"primary-content": "oklch(98% 0.01 330)",
			"secondary": "oklch(72% 0.28 260)",
			"secondary-content": "oklch(98% 0.01 260)",
			"accent": "oklch(72% 0.28 190)",
			"accent-content": "oklch(10% 0.02 190)",
			"neutral": "oklch(30% 0.03 300)",
			"neutral-content": "oklch(95% 0.02 300)",
			"info": "oklch(70% 0.2 230)",
			"info-content": "oklch(98% 0.01 230)",
			"success": "oklch(65% 0.24 145)",
			"success-content": "oklch(98% 0.01 145)",
			"warning": "oklch(80% 0.25 85)",
			"warning-content": "oklch(20% 0.05 85)",
			"error": "oklch(62% 0.3 25)",
			"error-content": "oklch(98% 0.01 25)"
		},
		"borderRadius": {
			"selector": "0.25rem",
			"field": "0.25rem",
			"box": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Orbitron",
				"Consolas",
				"Monaco",
				"Courier New",
				"monospace"
			],
			"body": [
				"Exo 2",
				"-apple-system",
				"BlinkMacSystemFont",
				"Segoe UI",
				"Roboto",
				"sans-serif"
			]
		}
	},
	"fonts": [
		{
			"package": "@fontsource/orbitron",
			"weights": [400, 700, 900],
			"variable": true
		},
		{
			"package": "@fontsource/exo-2",
			"weights": [300, 400, 500, 600],
			"variable": true
		}
	],
	"metadata": {
		"description": "Dark surfaces with neon accents and glows.",
		"builtInThemeHint": "synthwave"
	},
	"extended": {
		"effects": {
			"glow": "subtle",
			"neonGlow": {
				"primary": "0 0 20px var(--color-primary)",
				"secondary": "0 0 30px var(--color-secondary)",
				"accent": "0 0 25px var(--color-accent)"
			}
		},
		"neonColors": {
			"backgrounds": [
				"#ff006e",
				"#8338ec",
				"#3a86ff",
				"#06ffa5",
				"#ffbe0b"
			],
			"accents": [
				"#ff0080",
				"#00ffff",
				"#ff8c00",
				"#ff1493",
				"#00ff41",
				"#bf00ff"
			],
			"gradients": [
				"linear-gradient(45deg, #ff006e, #8338ec, #3a86ff)",
				"linear-gradient(135deg, #06ffa5 0%, #ff0080 50%, #8338ec 100%)"
			]
		},
		"animations": {
			"neon-pulse": "neon-pulse 2s ease-in-out infinite alternate",
			"cyber-glitch": "cyber-glitch 0.3s linear infinite",
			"matrix-scroll": "matrix-scroll 1s linear infinite"
		},
		"layout": {
			"scanlines": "repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0,255,255,0.03) 2px, rgba(0,255,255,0.03) 4px)",
			"chromatic": {
				"redShift": "2px",
				"blueShift": "-2px"
			}
		}
	},
	"notes": "Use neon glow effects sparingly for performance. Consider dark mode compatibility."
}
