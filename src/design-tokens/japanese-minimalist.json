{
	"version": "2",
	"id": "japanese-minimalist",
	"name": "Japanese Minimalist",
	"tags": ["minimal", "calm", "balanced", "light"],
	"aliases": ["japanese", "zen"],
	"tailwind": {
		"colors": {
			"background": "oklch(99% 0.01 240)",
			"foreground": "oklch(18% 0.02 240)",
			"muted": "oklch(96% 0.01 240)",
			"muted-foreground": "oklch(35% 0.02 240)",
			"border": "oklch(92% 0.01 240)",
			"primary": "oklch(55% 0.06 20)",
			"primary-foreground": "oklch(98% 0.01 20)",
			"secondary": "oklch(60% 0.06 170)",
			"secondary-foreground": "oklch(98% 0.01 170)",
			"accent": "oklch(70% 0.08 80)",
			"accent-foreground": "oklch(18% 0.02 80)",
			"destructive": "oklch(58% 0.20 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(68% 0.10 230)",
			"success": "oklch(64% 0.12 150)",
			"warning": "oklch(80% 0.14 85)"
		},
		"borderRadius": {
			"sm": "0.25rem",
			"md": "0.25rem",
			"lg": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Noto Sans JP",
				"Hiragino Sans",
				"Yu Gothic",
				"Meiryo",
				"sans-serif"
			],
			"body": [
				"Source Serif Pro",
				"Georgia",
				"Times New Roman",
				"Times",
				"serif"
			],
			"mono": [
				"Noto Sans Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded p-6",
		"elevated": "shadow-sm",
		"interactive": "hover:opacity-80 active:translate-y-px transition-all",
		"minimal-button": "border border-foreground/20 bg-transparent px-4 py-2 hover:bg-foreground/5",
		"underlined": "border-b border-foreground/20 hover:border-foreground/40"
	},
	"fonts": [
		{
			"package": "@fontsource/noto-sans-jp",
			"weights": [300, 400, 500, 700, 900],
			"variable": true
		},
		{
			"package": "@fontsource/source-serif-pro",
			"weights": [300, 400, 600, 700],
			"variable": true
		},
		{
			"package": "@fontsource/noto-sans-mono",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		}
	],
	"metadata": {
		"description": "Calm, minimal aesthetic with gentle accents."
	},
	"extended": {
		"effects": {
			"shadow": "0 1px 2px rgba(0,0,0,0.05)",
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "gentle-fade 0.4s ease",
			"hover": "natural-flow 0.6s ease",
			"press": null
		},
		"keyframes": {
			"gentle-fade": "0% { opacity: 0; }\n100% { opacity: 1; }",
			"zen-breathe": "0%, 100% { transform: scale(1); }\n50% { transform: scale(1.02); }",
			"natural-flow": "0% { transform: translateY(0); }\n100% { transform: translateY(-1px); }"
		},
		"surfaces": {
			"raised": "bg-muted shadow-sm",
			"sunken": "bg-border",
			"overlay": "bg-background/95"
		},
		"themeSpecific": {
			"naturalTones": {
				"offWhite": "#FEFEFE",
				"beige": "#F5F5DC",
				"lightBrown": "#D2B48C",
				"softGrey": "#F8F8FF",
				"subtleGreen": "#F0FFF0",
				"palette": [
					"#FEFEFE",
					"#F5F5DC",
					"#D2B48C",
					"#F8F8FF",
					"#F0FFF0",
					"#E6E6FA"
				],
				"earth": ["#DEB887", "#D2B48C", "#BC9A6A", "#A0956B"]
			},
			"zen": {
				"spacing": {
					"generous": "2rem",
					"breath": "3rem",
					"meditation": "4rem"
				},
				"balance": "1.618"
			}
		}
	},
	"notes": "Embrace negative space. Use natural tones. Avoid sharp contrasts. Focus on balance and harmony."
}
