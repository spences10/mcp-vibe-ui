{
	"version": "2",
	"id": "retro-futurism",
	"name": "Retro Futurism",
	"tags": ["neon", "vaporwave", "dark", "futuristic"],
	"aliases": ["retrowave", "vaporwave"],
	"tailwind": {
		"colors": {
			"background": "oklch(14% 0.04 300)",
			"foreground": "oklch(95% 0.02 300)",
			"muted": "oklch(18% 0.04 300)",
			"muted-foreground": "oklch(70% 0.02 300)",
			"border": "oklch(24% 0.04 300)",
			"primary": "oklch(65% 0.30 320)",
			"primary-foreground": "oklch(98% 0.01 320)",
			"secondary": "oklch(70% 0.28 260)",
			"secondary-foreground": "oklch(98% 0.01 260)",
			"accent": "oklch(72% 0.28 190)",
			"accent-foreground": "oklch(10% 0.02 190)",
			"destructive": "oklch(62% 0.32 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(72% 0.20 230)",
			"success": "oklch(66% 0.24 145)",
			"warning": "oklch(80% 0.26 85)"
		},
		"borderRadius": {
			"sm": "0.25rem",
			"md": "0.25rem",
			"lg": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Orbitron",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			],
			"body": [
				"Share Tech Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			],
			"mono": [
				"Source Code Pro",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded border border-primary/30 p-4",
		"elevated": "shadow-[0_0_30px_rgba(255,0,128,0.3)]",
		"interactive": "hover:shadow-[0_0_20px_var(--color-primary)] transition-shadow",
		"neon-glow": "shadow-[0_0_30px_var(--color-primary)] text-primary",
		"scanlines": "bg-[repeating-linear-gradient(0deg,transparent_0px,rgba(255,0,128,0.05)_1px,rgba(255,0,128,0.05)_2px,transparent_3px)]",
		"grid-perspective": "[transform:perspective(500px)_rotateX(60deg)]"
	},
	"fonts": [
		{
			"package": "@fontsource/orbitron",
			"weights": [400, 500, 600, 700, 800, 900],
			"variable": true
		},
		{
			"package": "@fontsource/share-tech-mono",
			"weights": [400],
			"variable": false
		},
		{
			"package": "@fontsource/source-code-pro",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		}
	],
	"metadata": {
		"description": "Dark neon palette with retro futuristic vibes."
	},
	"extended": {
		"effects": {
			"shadow": "0 0 30px rgba(255, 0, 128, 0.3)",
			"glow": "0 0 30px #ff0080",
			"blur": null
		},
		"animations": {
			"enter": "neon-flicker 1.5s ease-in-out infinite alternate",
			"hover": "retro-scan 3s linear infinite",
			"press": null
		},
		"keyframes": {
			"retro-scan": "0% { background-position: 0 0; }\n100% { background-position: 0 100%; }",
			"vhs-glitch": "0%, 100% { transform: translate(0); filter: none; }\n20% { transform: translate(-2px, 1px); filter: hue-rotate(90deg); }\n40% { transform: translate(2px, -1px); }\n60% { transform: translate(-1px, 2px); filter: hue-rotate(-90deg); }",
			"neon-flicker": "0%, 100% { opacity: 1; }\n50% { opacity: 0.8; }\n52% { opacity: 1; }\n54% { opacity: 0.9; }"
		},
		"surfaces": {
			"raised": "bg-muted shadow-[0_0_30px_rgba(255,0,128,0.2)] border border-primary/20",
			"sunken": "bg-background shadow-inner",
			"overlay": "bg-background/90 backdrop-blur-sm border border-primary/30"
		},
		"themeSpecific": {
			"synthColors": {
				"backgrounds": ["#1a0033", "#330066", "#0d001a", "#1a0d33"],
				"neons": [
					"#ff0080",
					"#00ffff",
					"#ff6600",
					"#8b00ff",
					"#00ff41",
					"#ffff00"
				],
				"gradients": [
					"linear-gradient(45deg, #ff0080, #8b00ff, #00ffff)",
					"linear-gradient(135deg, #1a0033 0%, #330066 50%, #ff0080 100%)"
				]
			},
			"gridLines": {
				"horizontal": "repeating-linear-gradient(90deg, transparent, transparent 79px, #ff008050 79px, #ff008050 81px)",
				"vertical": "repeating-linear-gradient(0deg, transparent, transparent 19px, #00ffff30 19px, #00ffff30 21px)"
			},
			"chromatic": {
				"aberration": "drop-shadow(2px 0 0 #ff0080) drop-shadow(-2px 0 0 #00ffff)"
			}
		}
	},
	"notes": "Heavy visual effects - use sparingly. Consider reduced motion preferences."
}
