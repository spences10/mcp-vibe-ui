	"tags": [
		"neon",
		"vaporwave",
		"dark",
		"futuristic"
	],
	"aliases": [
		"retrowave",
		"vaporwave"
	],
	"daisyThemeVars": {
		"--color-base-100": "oklch(14% 0.04 300)",
		"--color-base-200": "oklch(18% 0.04 300)",
		"--color-base-300": "oklch(24% 0.04 300)",
		"--color-base-content": "oklch(95% 0.02 300)",
		"--color-primary": "oklch(65% 0.30 320)",
		"--color-primary-content": "oklch(98% 0.01 320)",
		"--color-secondary": "oklch(70% 0.28 260)",
		"--color-secondary-content": "oklch(98% 0.01 260)",
		"--color-accent": "oklch(72% 0.28 190)",
		"--color-accent-content": "oklch(10% 0.02 190)",
		"--color-neutral": "oklch(28% 0.03 300)",
		"--color-neutral-content": "oklch(96% 0.01 300)",
		"--color-info": "oklch(72% 0.20 230)",
		"--color-info-content": "oklch(98% 0.01 230)",
		"--color-success": "oklch(66% 0.24 145)",
		"--color-success-content": "oklch(98% 0.01 145)",
		"--color-warning": "oklch(80% 0.26 85)",
		"--color-warning-content": "oklch(20% 0.05 85)",
		"--color-error": "oklch(62% 0.32 25)",
		"--color-error-content": "oklch(98% 0.01 25)",
		"--radius-selector": "0.25rem",
		"--radius-field": "0.25rem",
		"--radius-box": "0.5rem",
		"--size-selector": "0.25rem",
		"--size-field": "0.25rem",
		"--border": "1px",
		"--depth": "1",
		"--noise": "0"
	},
	"metadata": {
		"description": "Dark neon palette with retro futuristic vibes.",
		"builtInThemeHint": "synthwave"
	},
	"extended": {
		"typography": {
			"heading": "bold-condensed",
			"body": "normal",
			"fontStacks": {
				"display": {
					"fontsource": {
						"package": "@fontsource/orbitron",
						"family": "Orbitron",
						"weights": [
							400,
							500,
							600,
							700,
							800,
							900
						],
						"styles": [
							"normal"
						],
						"variable": true
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'Orbitron', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": true,
						"priority": "high"
					}
				},
				"body": {
					"fontsource": {
						"package": "@fontsource/share-tech-mono",
						"family": "Share Tech Mono",
						"weights": [
							400
						],
						"styles": [
							"normal"
						],
						"variable": false
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'Share Tech Mono', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "medium"
					}
				},
				"mono": {
					"fontsource": {
						"package": "@fontsource/source-code-pro",
						"family": "Source Code Pro",
						"weights": [
							300,
							400,
							500,
							600,
							700
						],
						"styles": [
							"normal",
							"italic"
						],
						"variable": true
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'Source Code Pro', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "low"
					}
				}
			}
		},
		"effects": {
			"synthGlow": {
				"pink": "0 0 30px #ff0080",
				"cyan": "0 0 25px #00ffff",
				"purple": "0 0 35px #8b00ff"
			},
			"gridLines": {
				"horizontal": "repeating-linear-gradient(90deg, transparent, transparent 79px, #ff008050 79px, #ff008050 81px)",
				"vertical": "repeating-linear-gradient(0deg, transparent, transparent 19px, #00ffff30 19px, #00ffff30 21px)"
			}
		},
		"synthColors": {
			"backgrounds": [
				"#1a0033",
				"#330066",
				"#0d001a",
				"#1a0d33"
			],
			"neons": [
				"#ff0080",
				"#00ffff",
				"#ff6600",
				"#8b00ff",
				"#00ff41",
				"#ffff00"
			],
			"gradients": [
				"linear-gradient(45deg, #ff0080, #8b00ff, #00ffff)",
				"linear-gradient(135deg, #1a0033 0%, #330066 50%, #ff0080 100%)"
			]
		},
		"animations": {
			"retro-scan": "retro-scan 3s linear infinite",
			"vhs-glitch": "vhs-glitch 0.5s steps(10, end) infinite",
			"neon-flicker": "neon-flicker 1.5s ease-in-out infinite alternate"
		},
		"layout": {
			"perspective": {
				"grid": "perspective(500px) rotateX(60deg)",
				"vanishing": "perspective(800px) rotateX(45deg)"
			},
			"scanlines": "repeating-linear-gradient(0deg, transparent 0px, rgba(255,0,128,0.05) 1px, rgba(255,0,128,0.05) 2px, transparent 3px)",
			"chromatic": {
				"aberration": "drop-shadow(2px 0 0 #ff0080) drop-shadow(-2px 0 0 #00ffff)"
			}
		}
	},
	"notes": "Heavy visual effects - use sparingly. Consider reduced motion preferences."
}