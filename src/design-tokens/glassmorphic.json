	"fonts": [
		{
			"package": "@fontsource/inter",
			"weights": [300, 400, 500, 600, 700, 800, 900],
			"variable": true
		},
		{
			"package": "@fontsource/fira-code",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		}
	],
	"metadata": {
		"description": "Frosted glass aesthetic with airy color accents."
	},
	"extended": {
		"effects": {
			"shadow": "0 8px 32px rgba(31,38,135,0.15)",
			"glow": null,
			"blur": "blur(16px)"
		},
		"animations": {
			"enter": "float 6s ease-in-out infinite",
			"hover": "glass-morph 0.3s ease-out",
			"press": null
		},
		"keyframes": {
			"float": "0%, 100% { transform: translateY(0); }\n50% { transform: translateY(-10px); }",
			"shimmer": "0% { background-position: -200% 0; }\n100% { background-position: 200% 0; }",
			"glass-morph": "0% { backdrop-filter: blur(8px); }\n100% { backdrop-filter: blur(16px); }"
		},
		"surfaces": {
			"raised": "bg-white/15 backdrop-blur-lg shadow-lg",
			"sunken": "bg-black/5 backdrop-blur-sm",
			"overlay": "bg-white/20 backdrop-blur-xl"
		},
		"themeSpecific": {
			"glassColors": {
				"backgrounds": [
					"rgba(255,255,255,0.1)",
					"rgba(255,255,255,0.15)",
					"rgba(255,255,255,0.08)"
				],
				"overlays": [
					"rgba(255,255,255,0.25)",
					"rgba(240,248,255,0.2)"
				],
				"gradients": [
					"linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05))",
					"linear-gradient(45deg, rgba(240,248,255,0.15), rgba(255,255,255,0.1))"
				]
			},
			"backdrop": {
				"glass": "blur(16px) saturate(180%)",
				"frost": "blur(20px) brightness(1.1)"
			}
		}
	},
	"notes": "Ensure backdrop-filter support. Use glass effects with appropriate opacity for readability."
}
