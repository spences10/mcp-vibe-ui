		"interactive": "hover:bg-white/20 transition-all",
		"glass": "backdrop-blur-md bg-white/10 border border-white/20",
		"frosted": "backdrop-blur-xl bg-white/5 border border-white/10",
		"glass-dark": "backdrop-blur-md bg-black/10 border border-black/20"
