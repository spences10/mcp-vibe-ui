{
	"version": "2",
	"id": "typographic",
	"name": "Typographic",
	"tags": ["content-first", "readable", "neutral"],
	"aliases": ["type"],
	"tailwind": {
		"colors": {
			"background": "oklch(99% 0.01 240)",
			"foreground": "oklch(17% 0.02 240)",
			"muted": "oklch(96% 0.01 240)",
			"muted-foreground": "oklch(30% 0.02 240)",
			"border": "oklch(92% 0.01 240)",
			"primary": "oklch(48% 0.06 260)",
			"primary-foreground": "oklch(96% 0.01 260)",
			"secondary": "oklch(58% 0.08 25)",
			"secondary-foreground": "oklch(98% 0.01 25)",
			"accent": "oklch(66% 0.10 150)",
			"accent-foreground": "oklch(14% 0.02 150)",
			"destructive": "oklch(58% 0.20 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(70% 0.10 230)",
			"success": "oklch(64% 0.12 150)",
			"warning": "oklch(82% 0.14 85)"
		},
		"borderRadius": {
			"sm": "0.25rem",
			"md": "0.25rem",
			"lg": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Inter",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"body": [
				"Inter",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"mono": [
				"JetBrains Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded p-6",
		"elevated": "shadow-sm",
		"interactive": "hover:underline underline-offset-4 transition-all",
		"heading-h1": "text-5xl font-bold tracking-tight",
		"heading-h2": "text-3xl font-semibold tracking-tight",
		"body-text": "text-base leading-relaxed max-w-prose",
		"link": "underline underline-offset-2 font-medium hover:text-primary"
	},
	"fonts": [
		{
			"package": "@fontsource/inter",
			"weights": [100, 200, 300, 400, 500, 600, 700, 800, 900],
			"variable": true
		},
		{
			"package": "@fontsource/jetbrains-mono",
			"weights": [100, 200, 300, 400, 500, 600, 700, 800],
			"variable": true
		}
	],
	"metadata": {
		"description": "Readable, content-focused palette with subtle accents."
	},
	"extended": {
		"effects": {
			"shadow": null,
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "text-appear 0.3s ease-in",
			"hover": null,
			"press": null
		},
		"keyframes": {
			"text-appear": "0% { opacity: 0; transform: translateY(4px); }\n100% { opacity: 1; transform: translateY(0); }",
			"focus-ring": "0% { outline-width: 0; }\n100% { outline-width: 2px; }"
		},
		"surfaces": {
			"raised": "bg-muted",
			"sunken": "bg-border",
			"overlay": "bg-background/95"
		},
		"themeSpecific": {
			"hierarchy": {
				"sizes": {
					"h1": "3rem",
					"h2": "2.25rem",
					"h3": "1.875rem",
					"h4": "1.5rem",
					"h5": "1.25rem",
					"body": "1rem",
					"small": "0.875rem"
				},
				"weights": {
					"light": "300",
					"normal": "400",
					"medium": "500",
					"semibold": "600",
					"bold": "700"
				}
			},
			"gridSystem": {
				"baseline": "1.5rem",
				"modularScale": "1.25",
				"maxWidth": "65ch"
			},
			"textColors": {
				"black": "#000000",
				"darkGrey": "#333333",
				"mediumGrey": "#666666",
				"lightGrey": "#999999",
				"accents": ["#DC2626", "#2563EB", "#059669"]
			}
		}
	},
	"notes": "Focus on readability and hierarchy. Use mathematical spacing. Avoid decorative elements."
}
