{
	"version": "1",
	"id": "monochrome",
	"name": "Monochrome",
	"tags": [
		"grayscale",
		"neutral",
		"clean"
	],
	"aliases": [
		"mono"
	],
	"daisyThemeVars": {
		"--color-base-100": "oklch(98% 0.00 240)",
		"--color-base-200": "oklch(94% 0.00 240)",
		"--color-base-300": "oklch(90% 0.00 240)",
		"--color-base-content": "oklch(18% 0.00 240)",
		"--color-primary": "oklch(40% 0.00 240)",
		"--color-primary-content": "oklch(98% 0.00 240)",
		"--color-secondary": "oklch(60% 0.00 240)",
		"--color-secondary-content": "oklch(10% 0.00 240)",
		"--color-accent": "oklch(70% 0.00 240)",
		"--color-accent-content": "oklch(14% 0.00 240)",
		"--color-neutral": "oklch(30% 0.00 240)",
		"--color-neutral-content": "oklch(96% 0.00 240)",
		"--color-info": "oklch(75% 0.00 240)",
		"--color-info-content": "oklch(12% 0.00 240)",
		"--color-success": "oklch(65% 0.00 240)",
		"--color-success-content": "oklch(98% 0.00 240)",
		"--color-warning": "oklch(80% 0.00 240)",
		"--color-warning-content": "oklch(22% 0.00 240)",
		"--color-error": "oklch(55% 0.00 240)",
		"--color-error-content": "oklch(98% 0.00 240)",
		"--radius-selector": "0.25rem",
		"--radius-field": "0.25rem",
		"--radius-box": "0.25rem",
		"--size-selector": "0.25rem",
		"--size-field": "0.25rem",
		"--border": "1px",
		"--depth": "0",
		"--noise": "0"
	},
	"metadata": {
		"description": "Strict grayscale palette with clean edges.",
		"builtInThemeHint": "black"
	},
	"extended": {
		"typography": {
			"heading": "strong-contrast",
			"body": "clean-hierarchy",
			"fontStacks": {
				"display": {
					"fontsource": {
						"package": "@fontsource/helvetica-neue",
						"family": "Helvetica Neue",
						"weights": [
							300,
							400,
							500,
							600,
							700
						],
						"styles": [
							"normal",
							"italic"
						],
						"variable": false
					},
					"fallbacks": [
						"Helvetica",
						"Arial",
						"sans-serif"
					],
					"css": "'Helvetica Neue', Helvetica, Arial, sans-serif",
					"performance": {
						"fontDisplay": "swap",
						"preload": true,
						"priority": "high"
					}
				},
				"body": {
					"fontsource": {
						"package": "@fontsource/inter",
						"family": "Inter",
						"weights": [
							300,
							400,
							500,
							600,
							700
						],
						"styles": [
							"normal",
							"italic"
						],
						"variable": true
					},
					"fallbacks": [
						"system-ui",
						"-apple-system",
						"BlinkMacSystemFont",
						"Segoe UI",
						"sans-serif"
					],
					"css": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "medium"
					}
				},
				"mono": {
					"fontsource": {
						"package": "@fontsource/ibm-plex-mono",
						"family": "IBM Plex Mono",
						"weights": [
							300,
							400,
							500,
							600,
							700
						],
						"styles": [
							"normal",
							"italic"
						],
						"variable": false
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'IBM Plex Mono', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "low"
					}
				}
			}
		},
		"strictPalette": {
			"black": "#000000",
			"white": "#FFFFFF",
			"greys": [
				"#000000",
				"#1A1A1A",
				"#333333",
				"#4D4D4D",
				"#666666",
				"#808080",
				"#999999",
				"#B3B3B3",
				"#CCCCCC",
				"#E6E6E6",
				"#F5F5F5",
				"#FFFFFF"
			],
			"singleAccent": {
				"red": "#DC2626",
				"blue": "#2563EB"
			}
		},
		"contrast": {
			"strong": "ensure AA accessibility",
			"hierarchy": "use weight and size, not color",
			"separation": "rely on spacing and contrast"
		},
		"interactions": {
			"invert": {
				"hover": "background: black to white, text: white to black",
				"active": "full inversion for clarity",
				"focus": "outline: 2px solid accent or invert"
			},
			"buttons": {
				"outlined": "border: 2px solid black; background: transparent",
				"filled": "background: black; color: white",
				"ghost": "background: transparent; color: black"
			}
		},
		"animations": {
			"invert-hover": "all 0.2s ease",
			"fade-in": "opacity 0.3s ease",
			"clean-transition": "all 0.15s ease-out"
		},
		"layout": {
			"grid": {
				"clean": "use CSS Grid for precise alignment",
				"spacing": "generous whitespace for separation"
			},
			"minimalism": {
				"elegant": "less is more",
				"timeless": "avoid trendy effects"
			}
		}
	},
	"notes": "Maintain strict monochrome discipline. Single accent color for alerts only. Use inversion for hover states."
}