{
	"version": "2",
	"id": "industrial",
	"name": "Industrial",
	"tags": ["utility", "gritty", "bold", "high-contrast"],
	"aliases": ["factory"],
	"tailwind": {
		"colors": {
			"background": "oklch(96% 0.01 240)",
			"foreground": "oklch(18% 0.02 240)",
			"muted": "oklch(90% 0.01 240)",
			"muted-foreground": "oklch(30% 0.02 240)",
			"border": "oklch(84% 0.01 240)",
			"primary": "oklch(78% 0.20 85)",
			"primary-foreground": "oklch(16% 0.02 85)",
			"secondary": "oklch(45% 0.03 240)",
			"secondary-foreground": "oklch(96% 0.01 240)",
			"accent": "oklch(68% 0.20 25)",
			"accent-foreground": "oklch(98% 0.01 25)",
			"destructive": "oklch(58% 0.24 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(66% 0.12 230)",
			"success": "oklch(62% 0.16 150)",
			"warning": "oklch(82% 0.20 85)"
		},
		"borderRadius": {
			"sm": "0.25rem",
			"md": "0.25rem",
			"lg": "0.25rem"
		},
		"fontFamily": {
			"display": [
				"Bebas Neue",
				"Impact",
				"Arial Black",
				"sans-serif"
			],
			"body": [
				"JetBrains Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			],
			"mono": [
				"JetBrains Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded border-2 border-secondary p-4",
		"elevated": "shadow-md",
		"interactive": "hover:bg-primary/20 active:scale-[0.98] transition-all",
		"hazard": "bg-[repeating-linear-gradient(45deg,#f59e0b,#f59e0b_10px,#000_10px,#000_20px)]",
		"warning-border": "border-2 border-warning",
		"danger-border": "border-2 border-destructive"
	},
	"fonts": [
		{
			"package": "@fontsource/bebas-neue",
			"weights": [400],
			"variable": false
		},
		{
			"package": "@fontsource/jetbrains-mono",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		}
	],
	"metadata": {
		"description": "Utility look with warning accents and rugged surfaces."
	},
	"extended": {
		"effects": {
			"shadow": "0 4px 6px rgba(0,0,0,0.2)",
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": null,
			"hover": "heavy-click 0.1s ease-out",
			"press": null
		},
		"keyframes": {
			"heavy-click": "0% { transform: scale(1); }\n50% { transform: scale(0.95); }\n100% { transform: scale(1); }",
			"warning-pulse": "0%, 100% { opacity: 1; }\n50% { opacity: 0.6; }",
			"machinery": "0% { transform: rotate(0deg); }\n100% { transform: rotate(360deg); }"
		},
		"surfaces": {
			"raised": "bg-muted shadow-md border-2 border-secondary",
			"sunken": "bg-border shadow-inner",
			"overlay": "bg-background/95 border-2 border-secondary"
		},
		"themeSpecific": {
			"utilityColors": {
				"warning": ["#f59e0b", "#d97706", "#b45309", "#92400e"],
				"danger": ["#dc2626", "#b91c1c", "#991b1b", "#7f1d1d"],
				"metal": ["#71717a", "#52525b", "#3f3f46", "#27272a"]
			},
			"textures": {
				"brushedMetal": "linear-gradient(135deg, rgba(255,255,255,0.1) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.1) 50%)",
				"worn": "repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(0,0,0,0.1) 2px, rgba(0,0,0,0.1) 4px)",
				"grit": "radial-gradient(circle, rgba(0,0,0,0.1) 1px, transparent 1px)"
			}
		}
	},
	"notes": "High contrast required for safety applications. Test visibility in various lighting."
}
