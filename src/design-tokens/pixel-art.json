{
	"version": "2",
	"id": "pixel-art",
	"name": "Pixel Art",
	"tags": ["retro", "blocky", "low-radius", "high-contrast"],
	"aliases": ["pixel"],
	"tailwind": {
		"colors": {
			"background": "oklch(98% 0.02 250)",
			"foreground": "oklch(18% 0.02 250)",
			"muted": "oklch(94% 0.02 250)",
			"muted-foreground": "oklch(30% 0.02 250)",
			"border": "oklch(90% 0.02 250)",
			"primary": "oklch(68% 0.28 30)",
			"primary-foreground": "oklch(98% 0.01 30)",
			"secondary": "oklch(68% 0.28 220)",
			"secondary-foreground": "oklch(98% 0.01 220)",
			"accent": "oklch(72% 0.28 140)",
			"accent-foreground": "oklch(12% 0.02 140)",
			"destructive": "oklch(60% 0.30 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(70% 0.2 230)",
			"success": "oklch(66% 0.22 150)",
			"warning": "oklch(84% 0.25 90)"
		},
		"borderRadius": {
			"sm": "0rem",
			"md": "0rem",
			"lg": "0rem"
		},
		"fontFamily": {
			"display": [
				"Press Start 2P",
				"Courier New",
				"Monaco",
				"monospace"
			],
			"body": ["VT323", "MS Gothic", "Terminal", "monospace"],
			"mono": ["VT323", "Terminal", "Monaco", "monospace"]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted border-4 border-foreground p-4",
		"elevated": "shadow-[4px_4px_0_0_currentColor]",
		"interactive": "hover:bg-primary hover:text-primary-foreground active:translate-x-1 active:translate-y-1 transition-none",
		"pixel-button": "border-4 border-foreground px-4 py-2 bg-primary text-primary-foreground shadow-[4px_4px_0_0_#000] active:shadow-none active:translate-x-1 active:translate-y-1",
		"chunky-border": "border-4 border-foreground"
	},
	"fonts": [
		{
			"package": "@fontsource/press-start-2p",
			"weights": [400],
			"variable": false
		},
		{
			"package": "@fontsource/vt323",
			"weights": [400],
			"variable": false
		},
		{
			"package": "@fontsource/silkscreen",
			"weights": [400, 700],
			"variable": false
		}
	],
	"metadata": {
		"description": "Blocky, retro palette with crisp corners and bold colors."
	},
	"extended": {
		"effects": {
			"shadow": "4px 4px 0 0 currentColor",
			"glow": "0 0 8px currentColor",
			"blur": null
		},
		"animations": {
			"enter": "pixel-bounce steps(4, end) 0.6s",
			"hover": null,
			"press": "retro-scale steps(3, end) 0.2s"
		},
		"keyframes": {
			"pixel-bounce": "0%, 100% { transform: translateY(0); }\n25% { transform: translateY(-4px); }\n50% { transform: translateY(0); }\n75% { transform: translateY(-2px); }",
			"8bit-flash": "0%, 100% { opacity: 1; }\n50% { opacity: 0.5; }",
			"retro-scale": "0% { transform: scale(1); }\n50% { transform: scale(0.95); }\n100% { transform: scale(1); }"
		},
		"surfaces": {
			"raised": "border-4 border-foreground shadow-[4px_4px_0_0_#000]",
			"sunken": "border-4 border-foreground shadow-[inset_2px_2px_0_0_rgba(0,0,0,0.2)]",
			"overlay": "bg-background border-4 border-foreground"
		},
		"themeSpecific": {
			"retroColors": {
				"palette": [
					"#FF6B35",
					"#F9CA24",
					"#6C5CE7",
					"#A29BFE",
					"#FD79A8",
					"#FDCB6E",
					"#00B894",
					"#E84393"
				],
				"gameboy": ["#0F380F", "#306230", "#8BAC0F", "#9BBD0F"],
				"nes": [
					"#7C7C7C",
					"#0000FC",
					"#0000BC",
					"#4428BC",
					"#940084",
					"#A80020",
					"#A81000",
					"#881400"
				]
			},
			"pixelArt": {
				"noAntialiasing": "image-rendering: pixelated",
				"chunkyBorders": {
					"thin": "2px",
					"medium": "3px",
					"thick": "4px"
				}
			},
			"scanlines": "repeating-linear-gradient(0deg, transparent 0px, rgba(0,0,0,0.1) 1px, rgba(0,0,0,0.1) 2px, transparent 3px)"
		}
	},
	"notes": "Maintain pixel-perfect alignment. Use bitmap fonts. Avoid anti-aliasing and smooth gradients."
}
