{
	"version": "2",
	"id": "neu-brutalist",
	"name": "Neu-Brutalist",
	"tags": ["bold", "high-contrast", "flat", "blocky"],
	"aliases": ["neubrutalism", "brutalist"],
	"tailwind": {
		"colors": {
			"background": "oklch(97% 0.02 250)",
			"foreground": "oklch(18% 0.03 250)",
			"muted": "oklch(93% 0.03 250)",
			"muted-foreground": "oklch(35% 0.03 250)",
			"border": "oklch(90% 0.04 250)",
			"primary": "oklch(70% 0.24 30)",
			"primary-foreground": "oklch(99% 0.01 30)",
			"secondary": "oklch(72% 0.23 320)",
			"secondary-foreground": "oklch(99% 0.01 320)",
			"accent": "oklch(78% 0.23 110)",
			"accent-foreground": "oklch(10% 0.02 110)",
			"destructive": "oklch(60% 0.3 30)",
			"destructive-foreground": "oklch(98% 0.01 30)",
			"info": "oklch(70% 0.2 220)",
			"success": "oklch(65% 0.25 140)",
			"warning": "oklch(85% 0.25 95)"
		},
		"borderRadius": {
			"sm": "0rem",
			"md": "0rem",
			"lg": "0.25rem"
		},
		"fontFamily": {
			"display": ["Arial Black", "Arial", "Helvetica", "sans-serif"],
			"body": [
				"Space Grotesk",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			],
			"mono": [
				"Space Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted border-4 border-foreground p-4 shadow-[8px_8px_0_0_#000]",
		"elevated": "shadow-[8px_8px_0_0_#000]",
		"interactive": "hover:-translate-x-1 hover:-translate-y-1 active:translate-x-1 active:translate-y-1 transition-transform",
		"brutal-button": "border-4 border-foreground bg-primary text-primary-foreground px-6 py-3 shadow-[4px_4px_0_0_#000] hover:shadow-[2px_2px_0_0_#000] hover:translate-x-0.5 hover:translate-y-0.5",
		"rotated": "rotate-1"
	},
	"fonts": [
		{
			"package": "@fontsource/space-grotesk",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		},
		{
			"package": "@fontsource/space-mono",
			"weights": [400, 700],
			"variable": false
		}
	],
	"metadata": {
		"description": "High-contrast flat shapes with heavy borders and loud accents."
	},
	"extended": {
		"effects": {
			"shadow": "8px 8px 0 0 #000",
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "brutal-bounce 0.3s ease-out",
			"hover": "asymmetric-hover 0.2s ease-out",
			"press": null
		},
		"keyframes": {
			"glitch": "0%, 100% { transform: translate(0); }\n20% { transform: translate(-2px, 2px); }\n40% { transform: translate(2px, -2px); }\n60% { transform: translate(-1px, -1px); }\n80% { transform: translate(1px, 1px); }",
			"brutal-bounce": "0% { transform: scale(0.9) rotate(-2deg); }\n50% { transform: scale(1.05) rotate(1deg); }\n100% { transform: scale(1) rotate(0); }",
			"asymmetric-hover": "0% { transform: translate(0, 0); }\n100% { transform: translate(-2px, -2px); }"
		},
		"surfaces": {
			"raised": "shadow-[8px_8px_0_0_#000] border-4 border-foreground",
			"sunken": "shadow-[inset_4px_4px_0_0_rgba(0,0,0,0.2)]",
			"overlay": "bg-background border-4 border-foreground shadow-[12px_12px_0_0_#000]"
		},
		"themeSpecific": {
			"loudColors": {
				"backgrounds": [
					"#84cc16",
					"#ec4899",
					"#fb923c",
					"#06b6d4",
					"#f59e0b"
				],
				"accents": [
					"#ff6b6b",
					"#4ecdc4",
					"#45b7d1",
					"#96ceb4",
					"#ffd93d",
					"#ff9ff3"
				],
				"gradients": [
					"linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #ffd93d, #ff9ff3)",
					"linear-gradient(135deg, #84cc16 0%, #ec4899 50%, #fb923c 100%)"
				]
			},
			"chaos": {
				"rotations": [
					"rotate(1deg)",
					"rotate(-1deg)",
					"rotate(2deg)",
					"rotate(-0.5deg)"
				],
				"shadows": [
					"8px 8px 0 0 #000",
					"12px 12px 0 0 #000",
					"4px 4px 0 0 #000"
				]
			}
		}
	},
	"notes": "Tune warning/primary hues per content palette."
}
