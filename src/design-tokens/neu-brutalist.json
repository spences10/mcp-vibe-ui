{
	"version": "1",
	"id": "neu-brutalist",
	"name": "Neu-Brutalist",
	"tags": [
		"bold",
		"high-contrast",
		"flat",
		"blocky"
	],
	"aliases": [
		"neubrutalism",
		"brutalist"
	],
	"daisyThemeVars": {
		"--color-base-100": "oklch(97% 0.02 250)",
		"--color-base-200": "oklch(93% 0.03 250)",
		"--color-base-300": "oklch(90% 0.04 250)",
		"--color-base-content": "oklch(18% 0.03 250)",
		"--color-primary": "oklch(70% 0.24 30)",
		"--color-primary-content": "oklch(99% 0.01 30)",
		"--color-secondary": "oklch(72% 0.23 320)",
		"--color-secondary-content": "oklch(99% 0.01 320)",
		"--color-accent": "oklch(78% 0.23 110)",
		"--color-accent-content": "oklch(10% 0.02 110)",
		"--color-neutral": "oklch(35% 0.03 250)",
		"--color-neutral-content": "oklch(98% 0.01 250)",
		"--color-info": "oklch(70% 0.2 220)",
		"--color-info-content": "oklch(98% 0.01 220)",
		"--color-success": "oklch(65% 0.25 140)",
		"--color-success-content": "oklch(98% 0.01 140)",
		"--color-warning": "oklch(85% 0.25 95)",
		"--color-warning-content": "oklch(20% 0.05 95)",
		"--color-error": "oklch(60% 0.3 30)",
		"--color-error-content": "oklch(98% 0.01 30)",
		"--radius-selector": "0rem",
		"--radius-field": "0rem",
		"--radius-box": "0.25rem",
		"--size-selector": "0.25rem",
		"--size-field": "0.25rem",
		"--border": "2px",
		"--depth": "1",
		"--noise": "0"
	},
	"metadata": {
		"description": "High-contrast flat shapes with heavy borders and loud accents.",
		"builtInThemeHint": "acid"
	},
	"extended": {
		"typography": {
			"heading": "bold-tight",
			"body": "normal",
			"fontStacks": {
				"display": {
					"fontsource": {
						"package": "@fontsource/arial-black",
						"family": "Arial Black",
						"weights": [
							900
						],
						"styles": [
							"normal"
						],
						"variable": false
					},
					"fallbacks": [
						"Arial",
						"Helvetica",
						"sans-serif"
					],
					"css": "'Arial Black', Arial, Helvetica, sans-serif",
					"performance": {
						"fontDisplay": "swap",
						"preload": true,
						"priority": "high"
					}
				},
				"body": {
					"fontsource": {
						"package": "@fontsource/space-grotesk",
						"family": "Space Grotesk",
						"weights": [
							300,
							400,
							500,
							600,
							700
						],
						"styles": [
							"normal"
						],
						"variable": true
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'Space Grotesk', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "medium"
					}
				},
				"mono": {
					"fontsource": {
						"package": "@fontsource/space-mono",
						"family": "Space Mono",
						"weights": [
							400,
							700
						],
						"styles": [
							"normal",
							"italic"
						],
						"variable": false
					},
					"fallbacks": [
						"SF Mono",
						"Monaco",
						"Consolas",
						"monospace"
					],
					"css": "'Space Mono', 'SF Mono', Monaco, Consolas, monospace",
					"performance": {
						"fontDisplay": "swap",
						"preload": false,
						"priority": "low"
					}
				}
			}
		},
		"spacing": {
			"density": "standard"
		},
		"chaos": {
			"rotations": [
				"rotate(1deg)",
				"rotate(-1deg)",
				"rotate(2deg)",
				"rotate(-0.5deg)"
			],
			"skews": [
				"skew(-2deg)",
				"skew(2deg)",
				"skew(-1deg)"
			],
			"shadows": [
				"8px 8px 0 0 #000",
				"12px 12px 0 0 #000",
				"4px 4px 0 0 #000",
				"16px 16px 0 0 #333"
			],
			"transforms": {
				"hover": "hover:-translate-x-1 hover:-translate-y-1",
				"active": "active:translate-x-1 active:translate-y-1",
				"focus": "focus:scale-105"
			}
		},
		"loudColors": {
			"backgrounds": [
				"#84cc16",
				"#ec4899",
				"#fb923c",
				"#06b6d4",
				"#f59e0b"
			],
			"accents": [
				"#ff6b6b",
				"#4ecdc4",
				"#45b7d1",
				"#96ceb4",
				"#ffd93d",
				"#ff9ff3"
			],
			"gradients": [
				"linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #ffd93d, #ff9ff3)",
				"linear-gradient(135deg, #84cc16 0%, #ec4899 50%, #fb923c 100%)"
			]
		},
		"animations": {
			"glitch": "glitch 1s infinite",
			"brutal-bounce": "brutal-bounce 0.3s ease-out",
			"asymmetric-hover": "asymmetric-hover 0.2s ease-out"
		},
		"layout": {
			"containerRotations": [
				"rotate(1deg)",
				"rotate(-1deg)",
				"rotate(0.5deg)"
			],
			"clipPaths": [
				"polygon(0 0, 95% 5%, 100% 100%, 5% 95%)",
				"polygon(5% 0, 100% 0, 95% 100%, 0 100%)"
			],
			"asymmetricSpacing": {
				"paddingVariants": [
					"p-4 pl-8",
					"p-6 pr-12",
					"p-5 pb-10"
				],
				"marginVariants": [
					"m-4 ml-8",
					"m-3 mr-6",
					"m-5 mb-8"
				]
			}
		}
	},
	"notes": "Tune warning/primary hues per content palette."
}