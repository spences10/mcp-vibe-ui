{
	"version": "1",
	"id": "neumorphic",
	"name": "Neumorphic",
	"tags": ["soft", "shadowed", "embossed", "light"],
	"aliases": ["neumorphism"],
	"tailwind": {
		"colors": {
			"base-100": "oklch(98% 0.01 240)",
			"base-200": "oklch(95% 0.01 240)",
			"base-300": "oklch(90% 0.01 240)",
			"base-content": "oklch(22% 0.02 240)",
			"primary": "oklch(70% 0.06 210)",
			"primary-content": "oklch(14% 0.02 210)",
			"secondary": "oklch(76% 0.06 150)",
			"secondary-content": "oklch(14% 0.02 150)",
			"accent": "oklch(84% 0.06 90)",
			"accent-content": "oklch(16% 0.02 90)",
			"neutral": "oklch(40% 0.01 240)",
			"neutral-content": "oklch(96% 0.01 240)",
			"info": "oklch(72% 0.08 230)",
			"info-content": "oklch(14% 0.02 230)",
			"success": "oklch(68% 0.10 150)",
			"success-content": "oklch(98% 0.01 150)",
			"warning": "oklch(84% 0.12 85)",
			"warning-content": "oklch(22% 0.04 85)",
			"error": "oklch(62% 0.16 25)",
			"error-content": "oklch(98% 0.01 25)"
		},
		"borderRadius": {
			"selector": "1rem",
			"field": "1rem",
			"box": "1.5rem"
		},
		"fontFamily": {
			"display": [
				"Inter",
				"SF Pro Display",
				"system-ui",
				"-apple-system",
				"BlinkMacSystemFont",
				"sans-serif"
			],
			"body": [
				"Inter",
				"SF Pro Text",
				"system-ui",
				"-apple-system",
				"BlinkMacSystemFont",
				"sans-serif"
			],
			"mono": ["SF Mono", "Monaco", "Consolas", "monospace"]
		}
	},
	"fonts": [
		{
			"package": "@fontsource/inter",
			"weights": [300, 400, 500, 600, 700, 800],
			"variable": true
		}
	],
	"metadata": {
		"description": "Soft, tactile surfaces with subtle inner/outer shadows.",
		"builtInThemeHint": "cupcake"
	},
	"extended": {
		"effects": {
			"shadows": {
				"outer": "8px 8px 16px rgba(0,0,0,0.1), -8px -8px 16px rgba(255,255,255,0.8)",
				"inner": "inset 4px 4px 8px rgba(0,0,0,0.1), inset -4px -4px 8px rgba(255,255,255,0.8)",
				"pressed": "inset 2px 2px 4px rgba(0,0,0,0.2), inset -2px -2px 4px rgba(255,255,255,0.9)"
			},
			"highlights": {
				"top": "rgba(255,255,255,0.9)",
				"bottom": "rgba(0,0,0,0.1)"
			}
		},
		"softColors": {
			"backgrounds": ["#f0f0f3", "#e6e6ea", "#f5f5f7", "#ebebef"],
			"raised": ["#f8f8fb", "#f2f2f5", "#fafafa"],
			"pressed": ["#e8e8eb", "#dedee2", "#e0e0e4"]
		},
		"animations": {
			"soft-press": "soft-press 0.15s ease-out",
			"soft-release": "soft-release 0.15s ease-out",
			"gentle-hover": "gentle-hover 0.3s ease-out"
		},
		"layout": {
			"borderRadius": {
				"soft": "12px",
				"medium": "16px",
				"large": "24px"
			},
			"spacing": {
				"tight": "8px",
				"normal": "16px",
				"loose": "24px"
			}
		}
	},
	"notes": "Best on light backgrounds. Ensure sufficient contrast for accessibility."
}
