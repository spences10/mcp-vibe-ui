{
	"version": "2",
	"id": "neumorphic",
	"name": "Neumorphic",
	"tags": ["soft", "shadowed", "embossed", "light"],
	"aliases": ["neumorphism"],
	"tailwind": {
		"colors": {
			"background": "oklch(98% 0.01 240)",
			"foreground": "oklch(22% 0.02 240)",
			"muted": "oklch(95% 0.01 240)",
			"muted-foreground": "oklch(40% 0.01 240)",
			"border": "oklch(90% 0.01 240)",
			"primary": "oklch(70% 0.06 210)",
			"primary-foreground": "oklch(14% 0.02 210)",
			"secondary": "oklch(76% 0.06 150)",
			"secondary-foreground": "oklch(14% 0.02 150)",
			"accent": "oklch(84% 0.06 90)",
			"accent-foreground": "oklch(16% 0.02 90)",
			"destructive": "oklch(62% 0.16 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(72% 0.08 230)",
			"success": "oklch(68% 0.10 150)",
			"warning": "oklch(84% 0.12 85)"
		},
		"borderRadius": {
			"sm": "1rem",
			"md": "1rem",
			"lg": "1.5rem"
		},
		"fontFamily": {
			"display": [
				"Inter",
				"SF Pro Display",
				"system-ui",
				"-apple-system",
				"BlinkMacSystemFont",
				"sans-serif"
			],
			"body": [
				"Inter",
				"SF Pro Text",
				"system-ui",
				"-apple-system",
				"BlinkMacSystemFont",
				"sans-serif"
			],
			"mono": ["SF Mono", "Monaco", "Consolas", "monospace"]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-background rounded-2xl shadow-[8px_8px_16px_rgba(0,0,0,0.1),-8px_-8px_16px_rgba(255,255,255,0.8)]",
		"elevated": "shadow-[8px_8px_16px_rgba(0,0,0,0.1),-8px_-8px_16px_rgba(255,255,255,0.8)]",
		"interactive": "hover:shadow-[4px_4px_8px_rgba(0,0,0,0.1),-4px_-4px_8px_rgba(255,255,255,0.8)] transition-shadow",
		"raised": "shadow-[5px_5px_10px_#d1d9e6,-5px_-5px_10px_#ffffff]",
		"pressed": "shadow-[inset_5px_5px_10px_#d1d9e6,inset_-5px_-5px_10px_#ffffff]",
		"button": "rounded-xl shadow-[5px_5px_10px_#d1d9e6,-5px_-5px_10px_#ffffff] active:shadow-[inset_5px_5px_10px_#d1d9e6,inset_-5px_-5px_10px_#ffffff]"
	},
	"fonts": [
		{
			"package": "@fontsource/inter",
			"weights": [300, 400, 500, 600, 700, 800],
			"variable": true
		}
	],
	"metadata": {
		"description": "Soft, tactile surfaces with subtle inner/outer shadows."
	},
	"extended": {
		"effects": {
			"shadow": "8px 8px 16px rgba(0,0,0,0.1), -8px -8px 16px rgba(255,255,255,0.8)",
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "soft-release 0.15s ease-out",
			"hover": "gentle-hover 0.3s ease-out",
			"press": "soft-press 0.15s ease-out"
		},
		"keyframes": {
			"soft-press": "0% { box-shadow: 8px 8px 16px rgba(0,0,0,0.1), -8px -8px 16px rgba(255,255,255,0.8); }\n100% { box-shadow: inset 4px 4px 8px rgba(0,0,0,0.1), inset -4px -4px 8px rgba(255,255,255,0.8); }",
			"soft-release": "0% { box-shadow: inset 4px 4px 8px rgba(0,0,0,0.1), inset -4px -4px 8px rgba(255,255,255,0.8); }\n100% { box-shadow: 8px 8px 16px rgba(0,0,0,0.1), -8px -8px 16px rgba(255,255,255,0.8); }",
			"gentle-hover": "0% { transform: translateY(0); }\n100% { transform: translateY(-2px); }"
		},
		"surfaces": {
			"raised": "shadow-[8px_8px_16px_rgba(0,0,0,0.1),-8px_-8px_16px_rgba(255,255,255,0.8)]",
			"sunken": "shadow-[inset_4px_4px_8px_rgba(0,0,0,0.1),inset_-4px_-4px_8px_rgba(255,255,255,0.8)]",
			"overlay": "bg-background/95 shadow-xl"
		},
		"themeSpecific": {
			"softColors": {
				"backgrounds": ["#f0f0f3", "#e6e6ea", "#f5f5f7", "#ebebef"],
				"raised": ["#f8f8fb", "#f2f2f5", "#fafafa"],
				"pressed": ["#e8e8eb", "#dedee2", "#e0e0e4"]
			},
			"highlights": {
				"top": "rgba(255,255,255,0.9)",
				"bottom": "rgba(0,0,0,0.1)"
			}
		}
	},
	"notes": "Best on light backgrounds. Ensure sufficient contrast for accessibility."
}
