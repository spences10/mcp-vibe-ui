{
	"version": "2",
	"id": "claymorphic",
	"name": "Claymorphic",
	"tags": ["soft", "pastel", "rounded", "depth"],
	"aliases": ["clay"],
	"tailwind": {
		"colors": {
			"background": "oklch(98% 0.02 210)",
			"foreground": "oklch(22% 0.03 210)",
			"muted": "oklch(95% 0.03 210)",
			"muted-foreground": "oklch(40% 0.02 210)",
			"border": "oklch(92% 0.03 210)",
			"primary": "oklch(78% 0.09 250)",
			"primary-foreground": "oklch(18% 0.02 250)",
			"secondary": "oklch(85% 0.10 145)",
			"secondary-foreground": "oklch(20% 0.02 145)",
			"accent": "oklch(88% 0.10 70)",
			"accent-foreground": "oklch(22% 0.03 70)",
			"destructive": "oklch(70% 0.18 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(72% 0.12 230)",
			"success": "oklch(78% 0.12 140)",
			"warning": "oklch(86% 0.15 80)"
		},
		"borderRadius": {
			"sm": "1rem",
			"md": "1rem",
			"lg": "1.5rem"
		},
		"fontFamily": {
			"display": [
				"Poppins",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"body": [
				"Quicksand",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"mono": [
				"JetBrains Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded-2xl p-4 shadow-[0_4px_8px_rgba(0,0,0,0.1),0_2px_4px_rgba(0,0,0,0.06)]",
		"elevated": "shadow-[0_6px_20px_rgba(0,0,0,0.08)]",
		"interactive": "hover:-translate-y-0.5 hover:scale-[1.02] active:translate-y-0.5 active:scale-[0.98] transition-transform",
		"puffy": "rounded-[22px] shadow-[0_4px_8px_rgba(0,0,0,0.1),0_2px_4px_rgba(0,0,0,0.06)]",
		"pressed": "shadow-[inset_0_2px_4px_rgba(0,0,0,0.1)]"
	},
	"fonts": [
		{
			"package": "@fontsource/poppins",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		},
		{
			"package": "@fontsource/quicksand",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		},
		{
			"package": "@fontsource/jetbrains-mono",
			"weights": [300, 400, 500, 600, 700],
			"variable": true
		}
	],
	"metadata": {
		"description": "Soft, rounded surfaces with subtle depth and pastel accents."
	},
	"extended": {
		"effects": {
			"shadow": "0 4px 8px rgba(0,0,0,0.1), 0 2px 4px rgba(0,0,0,0.06)",
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "gentle-bob 2s ease-in-out infinite",
			"hover": "puffy-hover 0.3s ease-out",
			"press": "clay-press 0.15s ease-out"
		},
		"keyframes": {
			"puffy-hover": "0% { transform: translateY(0) scale(1); }\n100% { transform: translateY(-2px) scale(1.02); }",
			"clay-press": "0% { transform: scale(1); }\n100% { transform: translateY(2px) scale(0.98); }",
			"gentle-bob": "0%, 100% { transform: translateY(0); }\n50% { transform: translateY(-4px); }"
		},
		"surfaces": {
			"raised": "shadow-[0_6px_20px_rgba(0,0,0,0.08)] rounded-2xl",
			"sunken": "shadow-[inset_0_2px_4px_rgba(0,0,0,0.1)]",
			"overlay": "bg-background/90 rounded-3xl shadow-xl"
		},
		"themeSpecific": {
			"pastelColors": {
				"lavender": "#E6E6FA",
				"mintGreen": "#98FB98",
				"lightOrange": "#FFE4B5",
				"babyBlue": "#87CEFA",
				"palette": [
					"#E6E6FA",
					"#98FB98",
					"#FFE4B5",
					"#87CEFA",
					"#F0E68C",
					"#FFB6C1"
				],
				"gradients": [
					"linear-gradient(135deg, #E6E6FA, #98FB98, #FFE4B5)",
					"radial-gradient(circle, #87CEFA, #E6E6FA, #98FB98)"
				]
			},
			"roundness": {
				"small": "18px",
				"medium": "22px",
				"large": "28px",
				"pill": "50px"
			}
		}
	},
	"notes": "Use 18-22px border radius. Apply gentle 3D effects sparingly. Ensure pastel colors remain accessible."
}
