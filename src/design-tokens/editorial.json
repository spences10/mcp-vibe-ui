{
	"version": "1",
	"id": "editorial",
	"name": "Editorial",
	"tags": ["clean", "classic", "serif-friendly", "print"],
	"aliases": ["magazine"],
	"tailwind": {
		"colors": {
			"base-100": "oklch(99% 0.01 240)",
			"base-200": "oklch(96% 0.02 240)",
			"base-300": "oklch(93% 0.02 240)",
			"base-content": "oklch(20% 0.03 240)",
			"primary": "oklch(45% 0.05 250)",
			"primary-content": "oklch(96% 0.01 250)",
			"secondary": "oklch(55% 0.07 30)",
			"secondary-content": "oklch(98% 0.01 30)",
			"accent": "oklch(68% 0.09 120)",
			"accent-content": "oklch(14% 0.02 120)",
			"neutral": "oklch(32% 0.02 240)",
			"neutral-content": "oklch(98% 0.01 240)",
			"info": "oklch(70% 0.10 230)",
			"info-content": "oklch(14% 0.02 230)",
			"success": "oklch(65% 0.12 150)",
			"success-content": "oklch(98% 0.01 150)",
			"warning": "oklch(82% 0.14 85)",
			"warning-content": "oklch(22% 0.04 85)",
			"error": "oklch(60% 0.20 25)",
			"error-content": "oklch(98% 0.01 25)"
		},
		"borderRadius": {
			"selector": "0.25rem",
			"field": "0.25rem",
			"box": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Playfair Display",
				"Georgia",
				"Times New Roman",
				"Times",
				"serif"
			],
			"body": [
				"Source Sans Pro",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"mono": [
				"IBM Plex Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"fonts": [
		{
			"package": "@fontsource/playfair-display",
			"weights": [400, 500, 600, 700, 800, 900],
			"variable": true
		},
		{
			"package": "@fontsource/source-sans-pro",
			"weights": [300, 400, 600, 700],
			"variable": false
		},
		{
			"package": "@fontsource/ibm-plex-mono",
			"weights": [300, 400, 500, 600, 700],
			"variable": false
		}
	],
	"metadata": {
		"description": "Clean, content-first look inspired by editorial layouts.",
		"builtInThemeHint": "corporate"
	},
	"extended": {
		"editorial": {
			"hierarchy": {
				"headline": "3rem",
				"subheadline": "1.5rem",
				"body": "1rem",
				"caption": "0.875rem",
				"byline": "0.75rem"
			},
			"spacing": {
				"columnGap": "2rem",
				"paragraphSpacing": "1.5rem",
				"sectionSpacing": "3rem"
			}
		},
		"printColors": {
			"black": "#000000",
			"cream": "#F5F5DC",
			"newsprint": "#F8F8FF",
			"ink": "#2F2F2F",
			"accents": ["#8B0000", "#000080", "#006400", "#8B008B"],
			"muted": ["#696969", "#708090", "#A9A9A9", "#D3D3D3"]
		},
		"layouts": {
			"asymmetric": {
				"twoThirds": "2fr 1fr",
				"golden": "1.618fr 1fr",
				"magazine": "1fr 2fr 1fr"
			},
			"editorial": {
				"column": "max-width: 65ch",
				"pullQuote": "font-size: 1.25rem; border-left: 4px solid",
				"dropcap": "font-size: 3.5rem; float: left; line-height: 1"
			}
		},
		"animations": {
			"page-turn": "page-turn 0.6s ease-out",
			"text-reveal": "text-reveal 0.8s ease-out",
			"underline-grow": "underline-grow 0.3s ease-out"
		},
		"interactions": {
			"textLink": "text-decoration: underline; text-decoration-thickness: 1px",
			"emphasis": "font-weight: 600; color: var(--color-accent)",
			"minimal": "border: 1px solid; background: transparent"
		}
	},
	"notes": "Focus on typography and hierarchy. Use asymmetric grids. Keep interactions minimal and text-focused."
}
