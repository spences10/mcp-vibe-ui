{
	"version": "1",
	"id": "editorial",
	"name": "Editorial",
	"tags": [
		"clean",
		"classic",
		"serif-friendly",
		"print"
	],
	"aliases": [
		"magazine"
	],
	"daisyThemeVars": {
		"--color-base-100": "oklch(99% 0.01 240)",
		"--color-base-200": "oklch(96% 0.02 240)",
		"--color-base-300": "oklch(93% 0.02 240)",
		"--color-base-content": "oklch(20% 0.03 240)",
		"--color-primary": "oklch(45% 0.05 250)",
		"--color-primary-content": "oklch(96% 0.01 250)",
		"--color-secondary": "oklch(55% 0.07 30)",
		"--color-secondary-content": "oklch(98% 0.01 30)",
		"--color-accent": "oklch(68% 0.09 120)",
		"--color-accent-content": "oklch(14% 0.02 120)",
		"--color-neutral": "oklch(32% 0.02 240)",
		"--color-neutral-content": "oklch(98% 0.01 240)",
		"--color-info": "oklch(70% 0.10 230)",
		"--color-info-content": "oklch(14% 0.02 230)",
		"--color-success": "oklch(65% 0.12 150)",
		"--color-success-content": "oklch(98% 0.01 150)",
		"--color-warning": "oklch(82% 0.14 85)",
		"--color-warning-content": "oklch(22% 0.04 85)",
		"--color-error": "oklch(60% 0.20 25)",
		"--color-error-content": "oklch(98% 0.01 25)",
		"--radius-selector": "0.25rem",
		"--radius-field": "0.25rem",
		"--radius-box": "0.5rem",
		"--size-selector": "0.25rem",
		"--size-field": "0.25rem",
		"--border": "1px",
		"--depth": "0",
		"--noise": "0"
	},
	"metadata": {
		"description": "Clean, content-first look inspired by editorial layouts.",
		"builtInThemeHint": "corporate"
	},
	"extended": {
		"typography": {
			"heading": "large-commanding",
			"body": "small-supporting",
			"fontStacks": {
				"display": "Playfair Display, Georgia, serif",
				"body": "Source Sans Pro, Helvetica, sans-serif",
				"mono": "IBM Plex Mono, monospace"
			}
		},
		"editorial": {
			"hierarchy": {
				"headline": "3rem",
				"subheadline": "1.5rem",
				"body": "1rem",
				"caption": "0.875rem",
				"byline": "0.75rem"
			},
			"spacing": {
				"columnGap": "2rem",
				"paragraphSpacing": "1.5rem",
				"sectionSpacing": "3rem"
			}
		},
		"printColors": {
			"black": "#000000",
			"cream": "#F5F5DC",
			"newsprint": "#F8F8FF",
			"ink": "#2F2F2F",
			"accents": [
				"#8B0000",
				"#000080",
				"#006400",
				"#8B008B"
			],
			"muted": [
				"#696969",
				"#708090",
				"#A9A9A9",
				"#D3D3D3"
			]
		},
		"layouts": {
			"asymmetric": {
				"twoThirds": "2fr 1fr",
				"golden": "1.618fr 1fr",
				"magazine": "1fr 2fr 1fr"
			},
			"editorial": {
				"column": "max-width: 65ch",
				"pullQuote": "font-size: 1.25rem; border-left: 4px solid",
				"dropcap": "font-size: 3.5rem; float: left; line-height: 1"
			}
		},
		"animations": {
			"page-turn": "page-turn 0.6s ease-out",
			"text-reveal": "text-reveal 0.8s ease-out",
			"underline-grow": "underline-grow 0.3s ease-out"
		},
		"interactions": {
			"textLink": "text-decoration: underline; text-decoration-thickness: 1px",
			"emphasis": "font-weight: 600; color: var(--color-accent)",
			"minimal": "border: 1px solid; background: transparent"
		}
	},
	"notes": "Focus on typography and hierarchy. Use asymmetric grids. Keep interactions minimal and text-focused."
}