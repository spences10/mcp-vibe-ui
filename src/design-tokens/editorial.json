{
	"version": "2",
	"id": "editorial",
	"name": "Editorial",
	"tags": ["clean", "classic", "serif-friendly", "print"],
	"aliases": ["magazine"],
	"tailwind": {
		"colors": {
			"background": "oklch(99% 0.01 240)",
			"foreground": "oklch(20% 0.03 240)",
			"muted": "oklch(96% 0.02 240)",
			"muted-foreground": "oklch(32% 0.02 240)",
			"border": "oklch(93% 0.02 240)",
			"primary": "oklch(45% 0.05 250)",
			"primary-foreground": "oklch(96% 0.01 250)",
			"secondary": "oklch(55% 0.07 30)",
			"secondary-foreground": "oklch(98% 0.01 30)",
			"accent": "oklch(68% 0.09 120)",
			"accent-foreground": "oklch(14% 0.02 120)",
			"destructive": "oklch(60% 0.20 25)",
			"destructive-foreground": "oklch(98% 0.01 25)",
			"info": "oklch(70% 0.10 230)",
			"success": "oklch(65% 0.12 150)",
			"warning": "oklch(82% 0.14 85)"
		},
		"borderRadius": {
			"sm": "0.25rem",
			"md": "0.25rem",
			"lg": "0.5rem"
		},
		"fontFamily": {
			"display": [
				"Playfair Display",
				"Georgia",
				"Times New Roman",
				"Times",
				"serif"
			],
			"body": [
				"Source Sans Pro",
				"Helvetica Neue",
				"Helvetica",
				"Arial",
				"sans-serif"
			],
			"mono": [
				"IBM Plex Mono",
				"SF Mono",
				"Monaco",
				"Consolas",
				"monospace"
			]
		}
	},
	"patterns": {
		"surface": "bg-background text-foreground",
		"card": "bg-muted rounded p-6",
		"elevated": "shadow-sm",
		"interactive": "hover:underline underline-offset-2 transition-all",
		"headline": "font-display text-5xl font-bold tracking-tight",
		"pullquote": "text-xl italic border-l-4 border-accent pl-4",
		"dropcap": "float-left text-6xl font-display leading-none mr-2"
	},
	"fonts": [
		{
			"package": "@fontsource/playfair-display",
			"weights": [400, 500, 600, 700, 800, 900],
			"variable": true
		},
		{
			"package": "@fontsource/source-sans-pro",
			"weights": [300, 400, 600, 700],
			"variable": false
		},
		{
			"package": "@fontsource/ibm-plex-mono",
			"weights": [300, 400, 500, 600, 700],
			"variable": false
		}
	],
	"metadata": {
		"description": "Clean, content-first look inspired by editorial layouts."
	},
	"extended": {
		"effects": {
			"shadow": null,
			"glow": null,
			"blur": null
		},
		"animations": {
			"enter": "text-reveal 0.8s ease-out",
			"hover": "underline-grow 0.3s ease-out",
			"press": null
		},
		"keyframes": {
			"page-turn": "0% { transform: rotateY(0); }\n100% { transform: rotateY(-180deg); }",
			"text-reveal": "0% { opacity: 0; transform: translateY(10px); }\n100% { opacity: 1; transform: translateY(0); }",
			"underline-grow": "0% { text-decoration-thickness: 1px; }\n100% { text-decoration-thickness: 2px; }"
		},
		"surfaces": {
			"raised": "bg-muted shadow-sm",
			"sunken": "bg-border",
			"overlay": "bg-background/95"
		},
		"themeSpecific": {
			"hierarchy": {
				"headline": "3rem",
				"subheadline": "1.5rem",
				"body": "1rem",
				"caption": "0.875rem",
				"byline": "0.75rem"
			},
			"printColors": {
				"black": "#000000",
				"cream": "#F5F5DC",
				"newsprint": "#F8F8FF",
				"ink": "#2F2F2F",
				"accents": ["#8B0000", "#000080", "#006400", "#8B008B"]
			},
			"layouts": {
				"twoThirds": "2fr 1fr",
				"golden": "1.618fr 1fr",
				"magazine": "1fr 2fr 1fr"
			}
		}
	},
	"notes": "Focus on typography and hierarchy. Use asymmetric grids. Keep interactions minimal and text-focused."
}
